<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - San Patricio Perfumería</title>   
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/auth.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Afacad:ital,wght@0,400..700;1,400..700&family=Cabin:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <section class="auth-section">
            <div class="auth-container">
                <img src="images/auth_assets/bottle_left.png" alt="" class="auth-decoration auth-decoration-left" aria-hidden="true">

                <div class="auth-form-wrapper">
                    <h1 class="auth-title">LOGIN</h1>
                    <form class="auth-form" id="login-form" action="/auth" method="post">
                        <div class="form-group">
                            <label for="login-email" class="sr-only">Email</label>
                            <input type="email" id="login-email" name="email" placeholder="Email">
                            <p class="error-message" id="error-login-email"></p> </div>
                        <div class="form-group">
                            <label for="login-password" class="sr-only">Contraseña</label>
                            <input type="password" id="login-password" name="password" placeholder="Contraseña">
                             <p class="error-message" id="error-login-password"></p> </div>
                        <a href="#" class="forgot-password">¿Olvidó su contraseña?</a>
                        <button type="submit" class="auth-button">Iniciar sesión</button>
                        <a href="/create" class="switch-auth-link">Crea una cuenta</a>
                    </form>
                </div>

                <img src="images/auth_assets/bottle_right.png" alt="" class="auth-decoration auth-decoration-right" aria-hidden="true">
            </div>
        </section>
    </main>
    <%- include('../partials/footer'); %>

    <script src="js/partialsLoader.js"></script>
    <script src="js/headerScripts.js"></script>
    <script src="js/authForms.js"></script>
    <script src="js/main.js"></script> </body>
</body>
</html>